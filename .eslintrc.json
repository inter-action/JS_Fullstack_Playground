//eslint config file
{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": false,
    "es6": true,
    "node": true
  },
  "rules": { // 0: off, 1: warn, 2: error
    "comma-dangle": [2, "only-multiline"],
    "quotes": [ 0, "double" ],// due to typescript compile with double quotes
    "no-undef": 1,
    "global-strict": 0,
    "no-extra-semi": 1,
    "no-underscore-dangle": 0,
    "no-unused-vars": 1,
    "no-trailing-spaces": [0, { "skipBlankLines": true }],
    "no-unreachable": 1,
    "no-console": [0, { "allow": ["warn", "error", "info", "debug"] }]
  },
  "globals": {
    "describe":true,
    "it": true
  }

}
